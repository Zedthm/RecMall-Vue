<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.recMall.mall.mapper.BookMapper">
    
    <resultMap type="Book" id="BookResult">
        <result property="bookId"    column="book_id"    />
        <result property="title"    column="title"    />
        <result property="isbn10"    column="isbn10"    />
        <result property="isbn13"    column="isbn13"    />
        <result property="pageCount"    column="page_count"    />
        <result property="publisher"    column="publisher"    />
        <result property="publishDate"    column="publish_date"    />
        <result property="price"    column="price"    />
        <result property="coverImageUrl"    column="cover_image_url"    />
        <result property="description"    column="description"    />
        <result property="isAvailable"    column="is_available"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedTime"    column="updated_time"    />
        <result property="version"    column="version"    />
    </resultMap>

    <sql id="selectBookVo">
        select book_id, title, isbn10, isbn13, page_count, publisher, publish_date, price, cover_image_url, description, is_available, created_time, updated_time, version from book
    </sql>

    <select id="selectBookList" parameterType="Book" resultMap="BookResult">
        <include refid="selectBookVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="isbn10 != null  and isbn10 != ''"> and isbn10 = #{isbn10}</if>
            <if test="isbn13 != null  and isbn13 != ''"> and isbn13 = #{isbn13}</if>
            <if test="pageCount != null  and pageCount != ''"> and page_count = #{pageCount}</if>
            <if test="publisher != null  and publisher != ''"> and publisher = #{publisher}</if>
            <if test="publishDate != null  and publishDate != ''"> and publish_date = #{publishDate}</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="coverImageUrl != null  and coverImageUrl != ''"> and cover_image_url = #{coverImageUrl}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="isAvailable != null "> and is_available = #{isAvailable}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
            <if test="version != null  and version != ''"> and version = #{version}</if>
        </where>
    </select>
    
    <select id="selectBookByBookId" parameterType="String" resultMap="BookResult">
        <include refid="selectBookVo"/>
        where book_id = #{bookId}
    </select>

    <insert id="insertBook" parameterType="Book" useGeneratedKeys="true" keyProperty="bookId">
        insert into book
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="isbn10 != null">isbn10,</if>
            <if test="isbn13 != null">isbn13,</if>
            <if test="pageCount != null">page_count,</if>
            <if test="publisher != null and publisher != ''">publisher,</if>
            <if test="publishDate != null">publish_date,</if>
            <if test="price != null">price,</if>
            <if test="coverImageUrl != null">cover_image_url,</if>
            <if test="description != null">description,</if>
            <if test="isAvailable != null">is_available,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedTime != null">updated_time,</if>
            <if test="version != null">version,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="isbn10 != null">#{isbn10},</if>
            <if test="isbn13 != null">#{isbn13},</if>
            <if test="pageCount != null">#{pageCount},</if>
            <if test="publisher != null and publisher != ''">#{publisher},</if>
            <if test="publishDate != null">#{publishDate},</if>
            <if test="price != null">#{price},</if>
            <if test="coverImageUrl != null">#{coverImageUrl},</if>
            <if test="description != null">#{description},</if>
            <if test="isAvailable != null">#{isAvailable},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
            <if test="version != null">#{version},</if>
         </trim>
    </insert>

    <update id="updateBook" parameterType="Book">
        update book
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="isbn10 != null">isbn10 = #{isbn10},</if>
            <if test="isbn13 != null">isbn13 = #{isbn13},</if>
            <if test="pageCount != null">page_count = #{pageCount},</if>
            <if test="publisher != null and publisher != ''">publisher = #{publisher},</if>
            <if test="publishDate != null">publish_date = #{publishDate},</if>
            <if test="price != null">price = #{price},</if>
            <if test="coverImageUrl != null">cover_image_url = #{coverImageUrl},</if>
            <if test="description != null">description = #{description},</if>
            <if test="isAvailable != null">is_available = #{isAvailable},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
            <if test="version != null">version = #{version},</if>
        </trim>
        where book_id = #{bookId}
    </update>

    <delete id="deleteBookByBookId" parameterType="String">
        delete from book where book_id = #{bookId}
    </delete>

    <delete id="deleteBookByBookIds" parameterType="String">
        delete from book where book_id in 
        <foreach item="bookId" collection="array" open="(" separator="," close=")">
            #{bookId}
        </foreach>
    </delete>
</mapper>